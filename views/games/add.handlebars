<div class="container">
    <h1>Add games</h1>
    <form action="/games" method="post">
        <div class="form-group mb-2">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" 
            placeholder="Please enter the title..." class="form-control"
            required>
        </div>
        <div class="form-group mb-2">
            <label for="year">Year</label>
            <input type="number" id="year" name="year" 
            placeholder="Please enter the year..." class="form-control">
        </div>
        <div class="form-group mb-2">
            <label for="image">Image</label>
            <input type="text" id="image" name="image" 
            placeholder="Paste an image url..." class="form-control">
        </div>
        <div class="form-group mb-2">
            <label for="genre">Genre</label>
            <input type="text" id="genre" name="genre" 
            placeholder="Please enter the genre..." class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>